# Configuración de base de datos
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/pyme_reporter
DB_ECHO=True
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Configuración de Google API
GOOGLE_SERVICE_ACCOUNT_FILE=database/sync/google/service_account.json
GOOGLE_DEFAULT_SPREADSHEET_ID=your_spreadsheet_id_here

# Configuración de Dropbox
DROPBOX_APP_KEY=your_app_key_here
DROPBOX_APP_SECRET=your_app_secret_here
DROPBOX_REFRESH_TOKEN=your_refresh_token_here
DROPBOX_ACCESS_TOKEN=your_access_token_here

# Directorios para archivos sincronizados
SYNC_DOWNLOADS_DIR=downloads
SYNC_UPLOADS_DIR=uploads
SYNC_TEMP_DIR=temp
